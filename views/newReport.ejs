<main>
	<h1>Create a phone usage report</h1>
	<h2>Usage form</h2>
	<form action="/phones/create" method="post">
        <p>
            <label>Hours Spent on Education:</label> <input type="Number" name="education" class="input" min="0" required>
            </p>
            <p>
                <label>Hours Spent Browsing:</label> <input type="Number" name="browsing" required class="input" min="0" required>
            </p>
            <p>
                <label>Hours Spent Shopping:</label> <input type="Number" name="shopping" class="input" min="0" required>
		</p>
        <p>
            <label>Date:</label> <input type="Date" name="date" class="input" max="2019-12-25" step="1" required>
        </p>

		<p>
			<input type="submit" value="Submit" class="submit">
			<input type="reset" value="Cancel">
		</p>
	</form>
</main>
</body>
